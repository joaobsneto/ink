    "version": "0.2.0",
    "configurations": [
        {
            "name": "ink Testbed (output only)",
            "type": "mono", // Mono Debug extension
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/InkTestBed/bin/Debug/InkTestBed.exe",
            "args": [],
            "cwd": "${workspaceFolder}/InkTestBed/bin/Debug/",
            "console": "internalConsole",    //
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "ink Testbed (choices in terminal)",
            "type": "mono", // Mono Debug extension
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/InkTestBed/bin/Debug/InkTestBed.exe",
            "args": [],
            "cwd": "${workspaceFolder}/InkTestBed/bin/Debug/",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}